{
	"include": ["src"],
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"lib": ["es2022", "dom", "dom.iterable"],
		"module": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "Bundler",
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "es2022",
		"verbatimModuleSyntax": true
	}
}
